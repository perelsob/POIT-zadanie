
#include <Servo.h>
Servo servo;
int angle =0;
int sensorValue=0;
const int analogOutPin = 4; // Analog output pin that the LED is attached to

void setup() {
  // put your setup code here, to run once:
    Serial.begin(9600);
    analogWrite(analogOutPin, 255);
    servo.attach(2);
    servo.write(0);
     delay(500); 
         servo.write(90);
     delay(500); 
         servo.write(180);
     delay(500); 


}



